@{
    ViewBag.Title = "Dashboard";
}

<main class="container my-5">
    <h1 class="mb-4">Welcome to Employee Management System</h1>
    <p class="lead">Use the dashboard below to quickly access different sections of the application.</p>

    <div class="row mt-5">

        <!-- Employees Card -->
        <div class="col-md-6 mb-4">
            <div class="card text-white bg-primary h-100 shadow-sm">
                <div class="card-body">
                    <h2 class="card-title">Employees</h2>
                    <p class="card-text">View, create, and manage all employee records.</p>
                    <a href="@Url.Action("Index", "Employee")" class="btn btn-light">Go to Employees</a>
                </div>
            </div>
        </div>

        <!-- Working Days Card -->
        <div class="col-md-6 mb-4">
            <div class="card text-white bg-success h-100 shadow-sm">
                <div class="card-body">
                    <h2 class="card-title">Working Days</h2>
                    <p class="card-text">Manage working days, schedules, and attendance.</p>
                    <a href="@Url.Action("Index", "WorkingDays")" class="btn btn-light">Go to Working Days</a>
                </div>
            </div>
        </div>

    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                Quick navigation: Click on any card to go directly to that section.
            </div>
        </div>
    </div>
</main>
