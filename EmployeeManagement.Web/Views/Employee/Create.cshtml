@model EmployeeManagement.Web.Models.EmployeeViewModel

@{
    ViewBag.Title = "Create Employee";
}

<h2>Create Employee</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.JobPosition)
        @Html.TextBoxFor(m => m.JobPosition, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.JobPosition)
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    @Html.ActionLink("Back to Employee List", "Index", "Employee", null, new { @class = "btn btn-secondary ms-2" })

}
